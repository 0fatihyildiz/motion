{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "csstype", "vitest", "vite/client", "vitest/globals"],
    "baseUrl": "."
  },
  "exclude": ["**/dist/**", "**/node_modules/**", "**/examples/**"]
}
